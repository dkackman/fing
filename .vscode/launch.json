    "version": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "request": "launch",
            "name": "Server",
            "cwd": "${workspaceFolder}/src/generator",
            "program": "/mnt/ml/anaconda3/envs/fing/bin/gunicorn",
            "args": [
                "--bind",
                "0.0.0.0:9147",
                "server:gunicorn_app"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch via NPM",
            "cwd": "${workspaceFolder}/src/api",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "CLI",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/generator",            
            "args": [
                "--prompt",
                "A rocketship to the moon"
            ],
            "justMyCode": true
        }
    ]
}